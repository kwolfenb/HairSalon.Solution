@{
  Layout = "_Layout";
}

<div class="container">
<h2>Snappy Snips Client List</h2>
<hr>
@if (@Model.Count == 0)
{
  <h4>There are no Clients currently in the database.</h4>
  <h4>Lets fix that! Click <a href="/client/new"> here</a> to add one now.</h4>
}
else
{
  <table>
    <tr>
      <th><h4><u>Name:</u></h4></th>
      <th><h4><u>Phone:</u></h4></th>    
    </tr>
    @foreach(var client in @Model)
    {
      <tr>
        <td><a href="/client/show/@client.GetId()">@client.GetName()</a></td>
        <td>@client.GetPhone()</td>
      </tr>
    }
  </table>

}

<h4><a href="/">Back to main page</a></h4>
</div>
