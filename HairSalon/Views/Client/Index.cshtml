@{
  Layout = "_Layout";
}

<div class="container">
<h2>Epic Hair Client List</h2>
<hr>
@if (@Model.Count == 0)
{
  <h4>There are no Clients currently in the database.</h4>
  <h4>Lets fix that! Click <a href="/client/new"> here</a> to add one now.</h4>
}
else
{
  <ul>
  @foreach(var client in @Model)
  {
    <li><a href="/client/show/@client.GetId()">@client.GetName()</a></li>
  }
  </ul>
<hr>
  <h4> <a href="/client/new">Add a new Client.</a></h4>
}

<h4><a href="/">Back to main page</a></h4>
</div>
