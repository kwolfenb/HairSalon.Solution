@{
  Layout = "_Layout";
}
<div class="container">
  <h2>Update Stylist Profile: @Model.GetName()</h2>
  <img src="~/img/@(@Model.GetPicture() + ".jpg")">

  <h3>Make changes here:</h3>
    <form action="/stylist/update/@Model.GetId()" method="post">
    <div class = "form-group row">
        <div class="col col-md-3">
          <label for="stylistName">Name: </label>
          <input class="form-control" id="stylistName" name="stylistName" type="text" required value="@Model.GetName()">
        </div>
        <div class="col col-md-3">
          <label for="stylistPhone">Phone Number: </label>
          <input class="form-control" id="stylistPhone" name="stylistPhone" type="text" required value="@Model.GetPhone()">
        </div>
        <div class="col col-md-3">
          <label for="stylistPicture">Picture file name (optional): </label>
          <input class="form-control" id="stylistPicture" name="stylistPicture" type="text" value="@Model.GetPicture()">
        </div>
      </div>
      <div class = "form-group row">
        <button class="btn btn-primary btn-lg" type="submit">Save Changes</button>
      </div>
    </form>
  <br>
  <hr>
  <h4><a href="/stylist/show/@Model.GetId()">Discard changes and go back to stylist's profile.</a></h4>

</div>