@{
  Layout = "_Layout";
}

<div class="container">
<h2>Snappy Snips Stylists</h2>
<hr>

@if (@Model.Count == 0)
{
  <h4>There are no stylists currently in the database.</h4>
  <h4>Lets fix that! Click <a href="/stylist/new"> here</a> to add one now.</h4>
}
else
{
  <ul>
  @foreach(var stylist in @Model)
  {
    <li><a href="/stylist/show/@stylist.GetId()">@stylist.GetName()</a></li>
  }
  </ul>
  <hr>
  <h4> <a href="/stylist/new">Add a new Stylist.</a></h4>
}

<h4><a href="/">Back to main page</a></h4>
</div>
