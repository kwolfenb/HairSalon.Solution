@using HairSalon.Models;
@{
  Layout = "_Layout";
}

<div class="container">
<h2>Add a new Specialty</h2>
<hr>
<form action="/specialty" method="post">
  <div class = "form-group row">
    <div class="col col-md-3">
      <label for="specialtyDescription">Description: </label>
      <input class="form-control" id="specialtyDescription" name="specialtyDescription" type="text" required>
    </div>
  </div>
  <div class="form-group row">
    <button class="btn btn-primary btn-lg" type="submit">Add Specialty</button>
  </div>
</form>
<hr>
<h4><a href="/specialty">See all Specialties.</a></h4>
<h4><a href="/">Back to Homepage.</a></h4>
</div>