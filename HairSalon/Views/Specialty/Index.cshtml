@{
  Layout = "_Layout";
}

<div class="container">
<h2>Snappy Snips Specialties</h2>
<h4>Select from the list to see which stylists offer each specialty.</h4>
<hr>

@if (@Model.Count == 0)
{
  <h4>There are no specialties currently available in the database.</h4>
  <h4>Lets fix that! Click <a href="/specialty/new"> here</a> to add one now.</h4>
}
else
{
  <ul>
  @foreach(var specialty in @Model)
  {
    <li><a href="/specialty/show/@specialty.GetId()">@specialty.GetDescription()</a></li>
  }
  </ul>
  <hr>
  <h4> <a href="/specialty/new">Add a new Specialty.</a></h4>
}

<h4><a href="/">Back to main page</a></h4>
</div>
